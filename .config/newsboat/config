unbind-key j
unbind-key k
unbind-key h
unbind-key H
unbind-key L
unbind-key c
unbind-key ,
browser "chromium %u"

# Feed settings
prepopulate-query-feeds yes
refresh-on-startup yes
#show-read-feeds no
auto-reload yes

macro w set browser "vlc %u" ; open-in-browser ; set browser "brave %u"

# bind keys
bind-key ; macro-prefix
bind-key h quit
bind-key BACKSPACE quit
bind-key j down
bind-key k up
bind-key l open
bind-key H prev-feed
bind-key L next-feed
bind-key c toggle-show-read-feeds

